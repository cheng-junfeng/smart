<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/red_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_3dp"
            android:background="@color/color_red"
            android:textColor="@color/white"
            android:text="红" />

        <Button
            android:id="@+id/primary_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_3dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:text="主题色" />

        <Button
            android:id="@+id/traslant_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_3dp"
            android:background="@color/colorTransparent"
            android:textColor="@color/blackText1"
            android:text="透明" />

        <Button
            android:id="@+id/all_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_3dp"
            android:background="@drawable/all_item_gray_selector"
            android:textColor="@color/blackText1"
            android:text="全屏" />

    </LinearLayout>
</LinearLayout>