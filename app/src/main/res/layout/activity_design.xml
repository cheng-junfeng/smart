<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/grid_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_height"
            android:layout_below="@id/cvAddFireVideo"
            android:layout_marginLeft="@dimen/offset_5dp"
            android:layout_marginTop="@dimen/offset_5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="3dip"
            app:cardElevation="1.5dip">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="格子视图"
                android:textSize="18sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/float_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_height"
            android:layout_marginLeft="@dimen/offset_5dp"
            android:layout_marginRight="@dimen/offset_5dp"
            android:layout_marginTop="@dimen/offset_5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="3dip"
            app:cardElevation="1.5dip">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="悬浮按钮"
                android:textSize="18sp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/page_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:layout_below="@id/cvAddFireVideo"
        android:layout_marginLeft="@dimen/offset_5dp"
        android:layout_marginRight="@dimen/offset_5dp"
        android:layout_marginTop="@dimen/offset_5dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="3dip"
        app:cardElevation="1.5dip">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="分页视图"
            android:textSize="18sp" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/stable_tab_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_height_100"
            android:layout_below="@id/cvAddFireVideo"
            android:layout_marginLeft="@dimen/offset_5dp"
            android:layout_marginTop="@dimen/offset_5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="3dip"
            app:cardElevation="1.5dip">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="固定表头"
                android:textSize="18sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/more_tab_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_height_100"
            android:layout_marginLeft="@dimen/offset_5dp"
            android:layout_marginRight="@dimen/offset_5dp"
            android:layout_marginTop="@dimen/offset_5dp"
            android:layout_weight="3"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="3dip"
            app:cardElevation="1.5dip">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="连续表头"
                android:textSize="18sp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:layout_below="@id/cvAddFireVideo"
        android:layout_marginLeft="@dimen/offset_5dp"
        android:layout_marginRight="@dimen/offset_5dp"
        android:layout_marginTop="@dimen/offset_5dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="3dip"
        app:cardElevation="1.5dip">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="底部弹出"
            android:textSize="18sp" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/left_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:layout_below="@id/cvAddFireVideo"
        android:layout_marginLeft="@dimen/offset_5dp"
        android:layout_marginRight="@dimen/offset_5dp"
        android:layout_marginTop="@dimen/offset_5dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="3dip"
        app:cardElevation="1.5dip">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="左侧滑出"
            android:textSize="18sp" />
    </android.support.v7.widget.CardView>
</LinearLayout>