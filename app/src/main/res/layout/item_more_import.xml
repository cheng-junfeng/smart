<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/hm_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/offset_10dp"
        android:layout_marginTop="@dimen/offset_3dp"
        android:layout_marginLeft="@dimen/offset_3dp"
        android:minHeight="@dimen/main_margin_height"
        android:background="@drawable/all_item_gray_selector"
        android:clickable="true">

        <ImageView
            android:id="@+id/hm_image"
            android:layout_width="@dimen/offset_35dp"
            android:layout_height="@dimen/offset_35dp"
            android:src="@mipmap/ic_category_0" />

        <TextView
            android:id="@+id/hm_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivDeleteImage"
        android:layout_width="@dimen/offset_15dp"
        android:layout_height="@dimen/offset_15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/offset_3dp"
        android:layout_marginTop="@dimen/offset_3dp"
        android:src="@mipmap/ic_add" />

</RelativeLayout>