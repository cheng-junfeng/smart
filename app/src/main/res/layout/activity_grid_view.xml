<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="筛选"
            android:textColor="@color/color_light_black"
            android:textSize="@dimen/text_size"
            android:paddingStart="@dimen/offset_15dp"
            android:paddingTop="@dimen/offset_10dp"
            android:background="@color/color_background"/>

        <FrameLayout
            android:id="@+id/fl_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/offset_15dp"
            android:paddingEnd="@dimen/offset_15dp"
            android:background="@color/color_background">

            <TextView
                android:id="@+id/tv_area_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:visibility="gone"
                android:layout_marginTop="@dimen/offset_10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_small"
                android:background="@drawable/type_blue"
                android:padding="@dimen/offset_5dp" />

        </FrameLayout>

        <com.wu.safe.smart.ui.widget.ScrollGridView
            android:id="@+id/gv_area"
            android:paddingTop="@dimen/offset_10dp"
            android:paddingStart="@dimen/offset_7dp"
            android:paddingEnd="@dimen/offset_7dp"
            android:numColumns="3"
            android:background="@color/color_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>