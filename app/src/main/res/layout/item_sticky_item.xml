<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:smart="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/all_item_gray_selector"
    android:clickable="true"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:minHeight="@dimen/msg_home_height">

    <LinearLayout
        android:id="@+id/re_first_layout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_left"
        android:background="@drawable/all_item_gray_selector"
        android:gravity="center">

        <com.smart.ui.widget.BGABadgeTextView
            android:id="@+id/re_front_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_launcher"
            android:gravity="center"
            smart:badge_gravity="rightTop"
            smart:badge_horizontalMargin="1dp"
            smart:badge_verticalMargin="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_left"
        android:layout_toRightOf="@+id/re_first_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/re_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="公告"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/re_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="false"
            android:text="武汉远古星球科技集团有限公司-1号楼-1层-产品展示厅"
            android:textColor="#989898"
            android:textSize="@dimen/text_size" />
    </LinearLayout>
</RelativeLayout>