<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/big_window_layout"
	android:layout_width="250dp"
	android:layout_height="280dp"
	android:background="@drawable/dialog_shape_toast_bg"
	android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<ImageView
            android:id="@+id/close"
			android:layout_width="@dimen/offset_25dp"
			android:layout_height="@dimen/offset_25dp"
			android:layout_alignParentEnd="true"
			android:src="@mipmap/bg_btn_close"/>
	</RelativeLayout>

	<com.custom.widget.WatcherBoard
		android:id="@+id/watch"
		android:layout_width="200dp"
		android:layout_height="200dp"
		android:layout_gravity="center"/>

    <Button 
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_button_height"
        android:layout_marginLeft="@dimen/offset_10dp"
        android:layout_marginRight="@dimen/offset_10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
		android:background="@drawable/all_item_gray_selector"
        android:textColor="@color/colorPrimary"
        android:text="返回" />
</LinearLayout>