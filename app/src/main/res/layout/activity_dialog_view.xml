<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/test1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/type_blue"
                android:text="Popup弹框1" />

            <TextView
                android:id="@+id/test2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/type_com"
                android:text="Popup弹框2" />
        </LinearLayout>

        <Button
            android:id="@+id/progress0_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_3dp"
            android:background="@drawable/all_item_gray_selector"
            android:text="小进度框" />

        <Button
            android:id="@+id/progress00_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_3dp"
            android:background="@drawable/all_item_gray_selector"
            android:text="小进度框+提示" />

        <Button
            android:id="@+id/progress_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_3dp"
            android:background="@drawable/all_item_gray_selector"
            android:text="大进度框" />

        <Button
            android:id="@+id/progress2_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_3dp"
            android:background="@drawable/all_item_gray_selector"
            android:text="大进度框+提示" />

        <Button
            android:id="@+id/confirm_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_3dp"
            android:background="@drawable/all_item_gray_selector"
            android:text="确认/取消框" />

        <Button
            android:id="@+id/confirm_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_3dp"
            android:background="@drawable/all_item_gray_selector"
            android:text="确认框" />

        <Button
            android:id="@+id/choose_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_3dp"
            android:background="@drawable/all_item_gray_selector"
            android:text="列表选择框" />

        <Button
            android:id="@+id/input_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_3dp"
            android:background="@drawable/all_item_gray_selector"
            android:text="输入框" />

        <Button
            android:id="@+id/toast_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_3dp"
            android:background="@drawable/all_item_gray_selector"
            android:text="提示" />

        <Button
            android:id="@+id/demo1_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_3dp"
            android:background="@drawable/all_item_gray_selector"
            android:text="demo" />

        <Button
            android:id="@+id/demo2_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_3dp"
            android:background="@drawable/all_item_gray_selector"
            android:text="demo2" />

        <Button
            android:id="@+id/demo3_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_3dp"
            android:background="@drawable/all_item_gray_selector"
            android:text="demo3" />
    </LinearLayout>
</ScrollView>