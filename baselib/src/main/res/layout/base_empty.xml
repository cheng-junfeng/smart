<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/fail_icon_height"
            android:layout_height="@dimen/fail_icon_height"
            android:layout_gravity="center"
            android:src="@mipmap/base_icon_loading_fail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_10dp"
            android:layout_gravity="center"
            android:text="加载失败，请稍后重试"
            android:textColor="@color/color_alpha_light_black"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/ly_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_10dp"
            android:layout_gravity="center"
            android:background="@drawable/all_item_retry_selector"
            android:text="刷新重试"
            android:textColor="@color/color_alpha_light_black"
            android:textSize="@dimen/text_size"/>
    </LinearLayout>
</FrameLayout>