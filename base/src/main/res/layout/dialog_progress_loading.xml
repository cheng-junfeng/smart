<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/dialog_width"
        android:layout_height="@dimen/dialog_height"
        android:background="@drawable/dialog_bg"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="@dimen/margin_progress"
            android:layout_height="@dimen/margin_progress"
            android:indeterminateDrawable="@drawable/dailog_progress_holo" />

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="loading"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/blackText1"/>
    </LinearLayout>
</RelativeLayout>